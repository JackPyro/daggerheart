<form class="{{cssClass}} item-sheet armor" autocomplete="off">
  <div class="item-wrap flex items-center column gap-10">
    <div class="item-sidebar flex-shrink">
      <img class="img-wrap" width="128" height="128" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    </div>
    <div class="item-info flex column gap-10 w-100">
      <div>
        <label class="label strong" for="name">Name</label>
        <input class="input w-100" name="name" type="text" value="{{item.name}}" placeholder="Name" />
      </div>
      <div>
        <label class="label strong" for="system.score">Base Score</label>
        <input class="input w-100" name="system.score" type="number" value="{{system.score}}" placeholder="Damage" />
      </div>
      <div class="flex column gap-10">
         <label class="label strong" for="system.biography">Feature: </label>
        {{editor system.feature target="system.feature" owner=owner}}
      </div>
    </div>
  </div>
</form>